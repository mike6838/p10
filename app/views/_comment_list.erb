<table>
  <% if current_user %>
    <%= erb :_comment_form %>
  <% end %>

  <% Comment.all.reverse_each do |comment| %>
  <tr>
    <td><%= comment.content %></td>
    <td><%= comment.time_difference %></td>
    <td><%= comment.user.firstname + " " + comment.user.lastname %></td>
  </tr>
<% end %>

</table>
